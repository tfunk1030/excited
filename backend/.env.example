# Server settings
HOST=0.0.0.0
PORT=8000
DEBUG=true

# OpenWeather API settings
OPENWEATHER_API_KEY=your_api_key_here

# Cache settings
CACHE_TYPE=memory  # memory or redis
CACHE_TTL=300  # 5 minutes
FORECAST_CACHE_TTL=1800  # 30 minutes

# Redis settings (used when CACHE_TYPE=redis)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=  # Optional, leave empty for no password

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
